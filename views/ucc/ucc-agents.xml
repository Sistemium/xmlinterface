<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="ucc-agents" label="Агенты UCC">
    
    <view-schema><form name="UCC">
        
        <parameter name="date" type="date"> <init with="today"/> </parameter>
        
        <form name="ucc-agent-blank" build-blank="true" new-only="true" concept="ucc-agent">
            <field name="xid"/>
            <field name="name" editable="true"/>
            <field name="code" editable="true"/>
        </form>
        
        <parameter name="searcher" label="Поиск" editable="true" optional="true"/>
        
        <form name="ucc-agent" is-set="true" page-size="15" toggle-edit-off-="true" deletable-="true">
            
            <add-labeled-fields/>
            <field name="id"/>
            
            <!--form name="ucc-account-income-agg" concept="ucc-income" label="Сводка приходов">
                <field name="id" aggregate="count" label="Кол-во приходов"/>
                <field name="summ" aggregate="sum" label="Сумма приходов"/>
            </form-->
            
            <join name="UCC" field="searcher"/>
            
        </form>
        
        <form name="ucc-agent-details" concept="ucc-agent">
            
            <parameter name="agent-to-detail-id" type="int" modifiable="true" property="id"/>
            
            <field name="id"/>
            
            <add-labeled-fields/>
            
            <form name="ucc-agent-income" concept="ucc-income" label="Приходы" is-set="true" page-size="5" >
                <add-labeled-fields/>
                <form name="ucc-income-account" concept="ucc-account">
                    <field name="name" label="Получатель"/>
                </form>
                <order-by name="date" dir="desc"/>
            </form>
            
            <!--form name="ucc-agent-expense" concept="ucc-expense" label="Расходы" is-set="true" page-size="5" >
                <add-labeled-fields/>
                <form name="ucc-expense-account" concept="ucc-account">
                    <field name="name" label="Получатель"/>
                </form>
                <order-by name="date" dir="desc"/>
            </form-->
            
        </form>
        
        <!--form name="ucc-account-cache" concept="ucc-account" is-set="true">
            <field name="id"/>
            <field name="name"/>
        </form-->
        
    </form></view-schema>
    
    <workflow>
        
        <step name="index-page">
            
            <display>
                <input form="UCC" field="searcher"/>
                <grid form="ucc-agent" label="Агенты" deletable="false">
                    <option reuse="detail-agent"/>
                </grid>
            </display>
            
            <choise>
                <option reuse="create-agent"/>
            </choise>
            
        </step>
        
        <step name="agent-details-page" hidden="true" label="Детализация агента">
            
            <display>
                <region class="hbox">
                    <region class="sidebar">
                        <input form="UCC" field="searcher"/>
                        <grid form="ucc-agent" deletable="false">
                            <option name="change-detailed-agent" label="Выбрать">
                                <command name="agent-to-detail-id" xpath-compute="
                                    xi:datum[@name='id']
                                "/>
                            </option>
                            <columns>
                                <column field="name" label="Агент"/>
                            </columns>
                        </grid>
                    </region>
                    <region class="flex">
                        <region>
                            <print form="ucc-agent-details" field="*"/>
                        </region>
                        <region class="tabs">
                            <grid form="ucc-agent-income" label="Недавние приходы"/>
                            <grid form="ucc-agent-expense" label="Недавние расходы" hide-empty="true"/>
                        </region>
                    </region>
                </region>
            </display>
            
            <choise>
                <option reuse="to-index"/>
            </choise>
            
        </step>
        
        <step name="create-agent-page" hidden="true" label="Добавление агента">
            
            <display>
                <region>
                    <input form="ucc-agent-blank" field="*"/>
                </region>
            </display>
            
            <choise>
                <option name="commit-agent-creation" label="Сохранить">
                    <command name="ucc-agent-blank">save</command>
                    <command name="set-of-ucc-agent">refresh</command>
                    <command name="ucc-agents">index-page</command>
                </option>
                <option name="cancel-agent-creation" label="Отменить">
                    <command name="ucc-agent-create">refresh</command>
                    <command name="ucc-agents">index-page</command>
                </option>
            </choise>
            
        </step>
        
        <reusables>
            
            <option name="create-agent" label="Добавить агента">
                <command name="ucc-agents">create-agent-page</command>
                <command name="ucc-agent-create">refresh</command>
            </option>
            
            <option name="to-index" label="К таблице агентов">
                <command name="ucc-agents">index-page</command>
            </option>
            
            <option name="detail-agent" label="...">
                <command name="agent-to-detail-id" xpath-compute="
                    xi:datum[@name='id']
                "/>
                <command name="ucc-agents">agent-details-page</command>
            </option>
            
        </reusables>
        
    </workflow>
    
</view-definition>