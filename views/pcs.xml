<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="pcs" label="Процессинговыe центры">
    <view-schema>
        <form name="op">
            <parameter name="name">
                <init with="username"/>
            </parameter>
            <form name="pc" label="Процессинговый центр" is-set="true" extendable="true" deletable="true">
                <field name="id" />
                <field name="name" editable="true" />
                <field name="code" editable="true" />
                <form name="protocol" label="Протокол" choise="protocol-cache">
                    <field name="id"/>
                    <field name="name"/>
                </form>
                <field name="processCount" editable="true" />
                <field name="maxTries" editable="true" />
                <field name="maxQueue" editable="true" />
                <field name="avoid" />
            </form>
            <form name="protocol-cache" concept="protocol" label="Протоколы" is-set="true">
                <field name="id"/>
                <field name="name"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <grid form="pc"/>
            </display>
        </step>
    </workflow>
</view-definition>