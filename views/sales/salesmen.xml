<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="salesmen" label="Торговые представители">
    <view-schema>
        <form name="sysuser">
            <parameter name="name">
                <init with="username"/>
            </parameter>
            <form name="sales-territory" expect-choise="true" label="Территория">
                <field name="id"/>
            	<field name="name" label="Территория" />
            	<form name="salesman" is-set="true">
                    <field name="id" />
                    <field name="name" />
                    <field name="mobilenum" editable="true"/>
                    <form name="salesman-group">
                        <field name="id" />
                        <field name="name" />
                    </form>
                    <order-by name="salesman_group_name" dir="asc"/>
                    <order-by name="name" dir="asc"/>
                </form>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <input form="sales-territory" />
                <grid  form="salesman">
                    <group>
                        <by field="name" form="salesman-group"/>
                    </group>
                </grid>
            </display>
        </step>
    </workflow>
</view-definition>