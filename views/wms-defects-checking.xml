<?xml version="1.0" ?>
<view-definition xmlns="http://unact.net/xml/xi" name="wms-defects-checking" label="Приемка брака">
    <view-schema>
        <form name="sysuser">
            <parameter name="name">
                <init with="username"/>
            </parameter>
            <field name="id"/>
            <form name="warehouse">
                <field name="id" />
                <field name="name" label="Склад"/>
                <form name="wms-picking-box" label="Коробка">
                    <parameter name="barcode" editable="true" label="Штрих-код"/>
                    
                    <field name="id"/>
                    
                    <form name="goods-condition">
                        <field name="id"/>
                        <field name="name" label="Состояние товара"/>
                    </form>
                    
                    <form name="defect-cause">
                        <field name="id"/>
                        <field name="name" label="Причина брака"/>
                    </form>
                    
                    <form name="wms-consignment-accept" label="Приемка партии">
                        <join name="warehouse"/>
                        <join name="sysuser"/>
                        <form name="totals" concept="wms-consignment-accept-goods" build-blank="true">
                            <field name="volume" aggregate="sum" label="Всего шт. принято"
                                   xpath-compute="sum(../../descendant::xi:data[@name='wms-consignment-accept-goods']/xi:datum[@name='volume'])"/>
                        </form>
                        <field name="id"/>
                        <field name="xid"/>
                        <field name="isFinished" editable="true"/>
                        <form name="wms-consignment-expected" is-set="true">
                            <join name="wms-picking-box"/>
                            <order-by name="ts" dir="desc"/>
                            <field name="volume" label="П." focusable="true"/>
                            <form name="goods" label="Товар">
                                <field name="id"/>
                                <field name="name" label="Товар"/>
                                
                                <form name="wms-consignment-accept-goods" build-blank="true" autosave="true">
                                    <join name="wms-consignment-accept"/>
                                    <field name="xid"/>
                                    <field name="volume" editable="true" label="Ф."
                                           autofill="volume" autofill-form="wms-consignment-expected"
                                           when-null-then-delete="true"/>
                                </form>
                                
                            </form>
                        </form>
                    </form>
                    
                </form>
                
                <form name="history" concept="warehouse">
                    <join name="warehouse" field="id"/>
                    <form name="history-item" concept="wms-picking-box" label="Коробка" is-set="true">
                        <order-by name="ts" dir="desc"/>
                        
                        <field name="id"/>
                        <field name="xid"/>
                        <field name="barcode" label="Наклейка"/>
                        <field name="ts"/>
                        
                        <where name="ts"><more-than>today()</more-than></where>
                        
                        <secure not-role="master">
                            <join name="sysuser"/>
                        </secure>
                        <secure role="master">
                            <form name="h-sorter" concept="sysuser">
                                <field name="name" label="Сортировщик"/>
                            </form>
                            <field name="isWritten-off" editable="true" autosave="true"/>
                        </secure>
                        
                        <form name="h-consignment-accept" concept="wms-consignment-accept" label="Приемка">
                            <field name="ts" label="Принято"/>
                            <where name="isFinished">1</where>
                            <form name="h-checker" concept="sysuser">
                                <field name="name" label="Приемщик"/>
                            </form>
                        </form>
                        
                        <form name="h-box-contents" concept="wms-defect-sorted">
                            <field name="volume" aggregate="sum" label="Всего шт." totals="sum"/>
                        </form>
                        
                        <form name="h-goods-condition" concept="goods-condition" label="Состояние товара">
                            <field name="id"/>
                            <field name="name"/>
                        </form>
                        
                        <form name="h-defect-cause" concept="defect-cause" label="Причина брака" >
                            <field name="id"/>
                            <field name="name"/>
                        </form>
                    </form>
                </form>
                
            </form>
        </form>
    </view-schema>
    <workflow>
        <step name="start" label="Идентификация коробки">
            <display>
                <input form="wms-picking-box" field="barcode"/>
                <print form="wms-consignment-accept" field="isFinished"/>
            </display>
            <validate>
                <nonempty form="wms-picking-box"/>
                <equals form="wms-consignment-accept" field="isFinished">0</equals>
            </validate>
            <choise>
                <option label="Отменить приемку">
                    <command name="isFinished">0</command>
                    <command name="save"/>
                    <command name="refresh"/>
                </option>
                <option label="Посмотреть все коробки">
                    <command name="wms-defect-checking">myhistory</command>
                </option>
            </choise>
        </step>
        <step name="maingrid" label="Сверка товаров">
            <display>
                <print form="goods-condition" field="name"/>
                <print form="defect-cause" field="name"/>
                <grid form="wms-consignment-expected">
                    <column form="goods" field="name"/>
                    <column form="wms-consignment-expected" field="volume"/>
                    <column form="wms-consignment-accept-goods" field="volume"/>
                    <!--option label="OK">
                        <command form="wms-defect-sorted">hide</command>
                        <command form="wms-consignment-accept-goods" field="volume"
                                 xpath-compute="xi:datum[@name='volume']"/>
                    </option-->
                </grid>
            </display>
            <validate>
                <nonempty form="wms-consignment-accept-goods" field="volume"/>
            </validate>
        </step>
        <step name="finish" label="Завершение приемки">
            <display>
                <print form="goods-condition" field="name"/>
                <print form="defect-cause" field="name"/>
                <print form="totals" field="volume"/>
            </display>
            <choise>
                <option label="Завершить">
                    <command name="isFinished">1</command>
                    <command name="save"/>
                    <command name="refresh"/>
                </option>
            </choise>
        </step>
        <step name="myhistory" label="Сегодняшние коробки" hidden="true">
            <display>
                <grid form="history-item" />
            </display>
            <choise>
                <option label="Сканировать наклейку">
                    <command name="wms-defect-checking">start</command>
                </option>
            </choise>
        </step>
    </workflow>
</view-definition>