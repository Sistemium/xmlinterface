<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="encashment-planning" label="Планирование инкассаций">
    <view-schema>
        <form name="branch" label="Отделение">
            <parameter name="username" type="string" label="Логин оператора"/>
            <parameter name="date" type="date" label="Дата" editable="true">
                <init with="today"/>
            </parameter>
            <field name="name" />
            <form name="TerminalRoutes" is-set="true">
            	<field name="xid"/>
            	<field name="group_name" key="true" sql-compute="isnull(group_name,'Не указано')"/>
            	<field name="terminalID" key="true"/>
            	<field name="name" label="Терминал"/>
            	<!--field name="address" label="Адрес"/-->
            	<field name="summ" label="Денег скопилось" type="decimal"/>
            	<field name="cnt" label="Купюр" type="int"/>
            	<join name="branch" field="date"/>
            	<!--where name="terminalID">8523025</where-->
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Добавление терминалов в маршруты">
            <display>
                <print form="branch" field="name"/>
                <print field="date"/>
                <grid form="TerminalRoutes">
                    <group>
                        <by field="group_name"/>
                    </group>
                </grid>
            </display>
        </step>
    </workflow>
</view-definition>