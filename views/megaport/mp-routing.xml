<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="mp-routing" label="Задания агентам" version="1.0">
    
    <view-schema><form name="sysuser">
        
        <parameter name="name"> <init with="username"/> </parameter>
        <parameter name="device-name"> <init with="device-name"/> </parameter>
        <parameter name="date" type="date" editable="true"> <init with="today"/> </parameter>
        
        <field name="id" />
        
        <form name="agent" concept="mp-agent"
            label="Агенты" what-label="агента"
            expect-choise="true" choise-style="table"
        >
            <field name="id"/>
            <field name="name"/>
            
            <form name="agent-routes-aggregate" concept="mp-agent-route" no-preload="true">
                <field name="date" aggregate="max" label="Последний маршрут"/>
            </form>
            
            <form name="route" concept="mp-agent-route" is-set="true" page-size="20">
                
                <where name="date"><more-than>today()-5</more-than></where>
                
                <field name="xid"/>
                <field name="ndoc"/>
                <field name="date"/>
                
                <form name="route-point" concept="mp-agent-route-point"
                    is-set="true"
                >
                    
                    <field name="xid"/>
                    
                    <form name="route-point-terminal" concept="catterminal">
                        <field name="name"/>
                    </form>
                    
                </form>
                
                <order-by name="ndoc" dir="desc"/>
                
            </form>
            
        </form>
        
    </form></view-schema>
    
    <workflow>
        
        <step name="index" label-="">
            
            <reusables>
                
                <choise name="">
                    <option name="" label="">
                        <command name=""></command>
                    </option>
                </choise>
                
            </reusables>
            
            <display>
                
                <input form="sysuser"/>
                <input field="date" form="sysuser"/>
                <print field="name" form="agent" label="Агент"/>
                
                <region class="tabs">
                    <for-each form="route">
                        <print field="date"/>
                        <print field="ndoc"/>
                        <grid form="route-point"/>
                    </for-each>
                </region>
                
            </display>
            
        </step>
        
    </workflow>
    
</view-definition>