<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="encashment-amendment" label="Корректировки инкассаций">
    <view-schema>
        <form name="AccessDate">
            <parameter name="username" type="string" label="Логин оператора"/>
            <field name="ddate" modified="init" sql-compute="now()"/>
            <field name="xid"/>
            <form name="EncashmentAmendment" set="true">
            	<field name="encashment_date" type="date" label="Дата инкассации"/>
            	<field name="terminalid" type="int" label="Терминал"/>
            	<field name="summ" type="decimal" label="Сумма инкассации"/>
            	<field name="column_name" type="string" label="Измененный атрибут"/>
            	<field name="old_value" type="int" label="Старое значение"/>
            	<field name="new_value" type="int" label="Новое значение"/>
            	<field name="amendment_date" type="datetime" label="Дата правки"/>
            	<join name="AccessDate" field="ddate"/>
            	<order-by name="amendment_date" dir="asc"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <grid form="EncashmentAmendment"/>
            </display>
        </step>
    </workflow>
</view-definition>