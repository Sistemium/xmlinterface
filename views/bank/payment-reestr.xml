<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="payments-reestr" label="Реестр платежей ЖКХ">
    <view-schema>
        <form name="dates">
            <parameter name="date" type="date" editable="true" label="Дата">
                <init with ="today"/>
            </parameter>
            <form name="payments-csv" is-set="true" pipeline="csv1251">
            	<field name="terminalid" />
            	<field name="summ" />
                      <field name="komiss"/>
            	<field name="paysystem"/>
            	<join name="dates" field="date"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Экспорт данных">
            <display>
                <input form="dates" field="date"/>
                <export form="payments-csv" type="csv1251"/>
            </display>
        </step>
    </workflow>
</view-definition>