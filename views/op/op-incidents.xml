<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="op-incidents" label="Инциденты" version="1.0">
    
    <view-schema><form name="sysuser" concept="op">
        
        <parameter name="name"> <init with="username"/> </parameter>
        <parameter name="device-name"> <init with="device-name"/> </parameter>
        <parameter name="date" type="date"> <init with="today"/> </parameter>
        
        <field name="id" />
        
        <form name="op-incident" 
            label="Инциденты"
            is-set="true" page-size="15"
        >
            
            <field name="id"/>
            <field name="header"/>
            <field name="closed" editable="true" format="true-only"/>
            <field name="ts"/>
            <field name="cts"/>
            <field name="data"/>
            
            <order-by name="ts" dir="desc"/>
            
        </form>
        
    </form></view-schema>
    
    <workflow>
        
        <step name="index">
            
            <display>
                <grid form="op-incident"/>
            </display>
            
        </step>
        
    </workflow>
    
</view-definition>