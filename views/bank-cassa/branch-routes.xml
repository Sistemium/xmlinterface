<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="branch-routes" label="Зоны обслуживания терминалов">
    <view-schema>
        <form name="branch" label="Отделение">
            <parameter name="username" type="string" label="Логин оператора"/>
            <field name="id" />
            <field name="name" />
            <form name="branch-route" is-set="true" extendable="true" deletable="true">
                <field name="xid" key="true"/>
            	<field name="name" label="Название"  editable="true"/>
            	<field name="description" label="Описание"  editable="true"/>
            	<order-by name="name"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <input form="branch" />
                <grid form="branch-route"/>
            </display>
        </step>
    </workflow>
</view-definition>