<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="encashment-notes" label="Купюры инкассации">
    <view-schema>
        <form name="branch" label="Отделение">
            <parameter name="username" type="string" label="Логин оператора"/>
            <parameter name="date" type="date" editable="true" label="Рабочий день">
                <init with="today"/>
            </parameter>
            <field name="name" />
            <field name="id" />
            <form name="branch-workday" label="Рабочий день отделения">
                <field name="id" />
                <field name="date" />
                <form name="branch-workday-coupon" label="Купюры" set="true">
                    <field name="xid" key="true"/>
                	<field name="coupon_name" label="Номинал" key="true"/>
                	<field name="cnt" label="Кол-во" editable="true" totals="sum"/>
                	<field name="summ" label="Сумма" totals="sum"/>
                </form>
            	<join name="branch" field="date"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Регистрация купюр инкассаций">
            <display>
                <print form="branch" field="name"/>
                <input form="branch" field="date"/>
                <grid form="branch-workday-coupon"/>
            </display>
        </step>
    </workflow>
</view-definition>