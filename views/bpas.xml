<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="bpas" label="БПА">
    <view-schema>
        <form name="sysuser">
            <parameter name="name">
                <init with="username"/>
            </parameter>
            <form name="cat-bpa" label="БПА" is-set="true">
                <field name="id" />
                <field name="name" />
                <field name="distrib-ratio" editable="true"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <grid form="cat-bpa"/>
            </display>
        </step>
    </workflow>
</view-definition>