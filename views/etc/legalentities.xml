<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="legalentities" label="Юрлица">
    <view-schema>
        <form name="dates">
            <parameter name="date" type="date" >
                <init with="today"/>
            </parameter>
            <form name="legalentity" label="Юрлицо" is-set="true" extendable="true" deletable="true">
                <field name="xid" key="true"/>
            	<field name="name" editable="true"/>
            	<field name="inn" editable="true" />
            	<field name="active_terminals_cnt" />
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <grid form="legalentity"/>
            </display>
        </step>
    </workflow>
</view-definition>