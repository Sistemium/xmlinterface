<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="up-clients" label="Клиент процессинга">
    <view-schema>
		<form name="up-client">
			<parameter name="username">
				<init with="username"/>
			</parameter>
			
			<field name="id" />
			<field name="name"/>
			<field name="funds"/>
			<field name="fundsAvailable"/>
			<field name="processingLogin" editable="true"/>
			<field name="processingPwd" editable="password"/>
			<field name="processingPwdNew" editable="password"/>
			
			<form name="up-overdraft" is-set="true" label="Овердрафт">
				<field name="dateB"/>
				<field name="dateE"/>
				<field name="summ"/>
			</form>
			
			<form name="up-clientDate" is-set="true" label="Сводка взаиморассчетов">
				<field name="date"/>
				<field name="fundsIncome"/>
				<field name="paymentsSum"/>
				<order-by name="date" dir="desc"/>
			</form>
		</form>
	</view-schema>
    <workflow>
        <step>
            <display>
				
                <print form="up-client" field="*"/>
				
                <input form="up-client" field="processingLogin"/>
                <input form="up-client" field="processingPwd"/>
                <input form="up-client" field="processingPwdNew"/>
				
				<grid form="up-overdraft" label="Действующие овердрафты"/>
				<grid form="up-clientDate" label="Сводка взаиморассчетов"/>
				
			</display>
		</step>
    </workflow>
</view-definition>