<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="subdealer-legals" label="Cубдилеры">
    <view-schema>
        <form name="dates">
            <parameter name="date" type="date" >
                <init with="today"/>
            </parameter>
            <parameter name="username" type="string">
                <init with="username"/>
            </parameter>
            <form name="subdealer" is-set="true" label="Субдилер">
                <join name="dates" field="username"/>
                <field name="id"/>
            	<field name="name" label="Субдилер" />
                <form name="legalentity" choise="legalentity-cache" label="Юрлицо">
                    <field name="id" />
                    <field name="name"/>
                </form>
            </form>
            <form name="legalentity-cache" concept="legalentity" is-set="true">
                <field name="id" />
                <field name="name" />
            </form>
        </form>
    </view-schema>
    <workflow>
        <step>
            <display>
                <grid form="subdealer"/>
            </display>
        </step>
    </workflow>
</view-definition>