<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="wms-addressing" label="Закрепление адресов">
    <view-schema>
        <form name="warehouse" label="Склад">
            <parameter name="username">
                <init with="username"/>
            </parameter>
            <field name="id"/>
            <field name="name"/>
            <form name="warehouse-goods" new-only="true">
    
                <form name="goods" label="Товар">
                    <parameter name="barcode" type="string" label="Поиск товара" editable="true"/>
                    <field name="id" />
                    <field name="code" />
                    <field name="name" label="Товар"/>
                    <form name="warehouse-goods-old" concept="warehouse-goods" >
                        <field name="address" label="Старый адрес"/>
                        <join name="warehouse"/>
                    </form>
                </form>
                    
                <field name="address" editable="true" label="Новый адрес"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Поиск товара">
            <display>
                <input form="goods" field="barcode"/>
                <print form="goods" field="name"/>
            </display>
            <validate>
                <nonempty form="goods"/>
            </validate>
        </step>
        <step label="Укажите адрес">
            <display>
                <print form="goods" field="name"/>
                <print form="goods" field="code"/>
                <print form="warehouse-goods-old" field="address"/>
                <input form="warehouse-goods" field="address"/>
            </display>
            <validate>
                <nonempty form="warehouse-goods" field="address"/>
            </validate>
        </step>
        <step label="Проверьте данные">
            <display>
                <print form="goods" field="name"/>
                <print form="goods" field="code"/>
                <print form="warehouse-goods" field="address"/>
            </display>
            <choise>
                <option label="Подтвердить и продолжить">
                    <command name="save"/>
                    <command name="refresh"/>
                </option>
                <option label="Подтвердить и закрыть">
                    <command name="save"/>
                    <command name="close"/>
                </option>
            </choise>
        </step>
    </workflow>
</view-definition>