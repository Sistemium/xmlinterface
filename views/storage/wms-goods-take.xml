<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="wms-goods-take" label="Забрать товар со стока">
    <view-schema>
        <form name="sysuser">
            <parameter name="name">
                <init with="username"/>
            </parameter>
            <field name="id"/>
            <form name="warehouse" label="Склад">
                <field name="id" />
                <field name="name" label="Склад"/>
                <form name="goods" label="Товар" read-only="true">
                    <parameter name="barcode" type="string" label="Штрих-код" editable="true"/>
                    <natural-order/>
                    <field name="id" />
                    <field name="code" />
                    <field name="name" label="Товар"/>
                    <form name="wms-cell-cat" label="Ячейка" choise-style="table">
                        <field name="id" />
                        <field name="name" label="Адрес"/>
                        <field name="remains"/>
                        <field name="pdate" />
                        <order-by name="pdate" dir="asc"/>
                        <order-by name="name" dir="asc"/>
                        <form name="wms-cell-get">
                            <field name="xid"/>
                            <field name="taken" editable="true" label="Сколько забрали" use-with-insert="true"/>
                            <join name="sysuser"/>
                        </form>
                    </form>
                </form>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Поиск товара">
            <display>
                <input form="goods" field="barcode" />
                <print form="goods" field="name" />
                <print form="goods" field="code" />
            </display>
            <validate>
                <nonempty form="goods"/>
            </validate>
        </step>
        <step label="Выбор ячейки">
            <display>
                <print form="goods" field="name" />
                <print form="goods" field="code" />
                <input form="wms-cell-cat" />
                <print form="wms-cell-cat" field="pdate"/>
                <input form="wms-cell-get" field="taken" />
            </display>
            <validate>
                <nonempty form="wms-cell-cat"/>
            </validate>
        </step>
        <step label="Проверьте данные">
            <display>
                <print form="goods" field="name"/>
                <print form="goods" field="code"/>
                <print form="wms-cell-cat" field="name"/>
                <print form="wms-cell-get" field="taken"/>
            </display>
            <choise>
                <option label="Подтвердить">
                    <command name="save"/>
                    <command name="refresh"/>
                </option>
            </choise>
        </step>
    </workflow>
</view-definition>