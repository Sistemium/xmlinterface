<?xml version="1.0"?>
<view-definition xmlns="http://unact.net/xml/xi" name="active-terminals" label="Рабочие терминалы">
    <view-schema>
        <form name="dates">
            <parameter name="date" type="date" modified="init">
                <init with ="today"/>
            </parameter>
            <form name="active-terminal" label="Терминалы" is-set="true">
            	<field name="branch_name" label-="Город"/>
            	<field name="id" type="int" label="ИД"/>
            	<field name="address" label="Адрес"/>
            	<field name="name" label="Название"/>
            	<field name="lastconnecttime" type="datetime" label="Последний отклик"/>
            	<field name="deleted" type="boolean"/>
            	<order-by name="branch_name" dir="asc"/>
            </form>
        </form>
    </view-schema>
    <workflow>
        <step label="Экспорт данных">
            <display>
                <export form="active-terminal" type="csv1251"/>
                <!--grid form="active-terminal">
                    <group>
                        <by field="city"/>
                    </group>
                </grid-->
            </display>
        </step>
    </workflow>
</view-definition>