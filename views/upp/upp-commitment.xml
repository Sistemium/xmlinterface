<?xml version="1.0" ?>

<view-definition xmlns="http://unact.net/xml/xi" name="upp-commitment" label="Утверждение заявок">
	
    <view-schema> <form name="sysuser"> 
		
		<parameter name="name">
			<init with="username"/>
		</parameter>
		
		<field name="id"/>
		
		<form name="detailed-client" concept="upp-client">
			
			<parameter name="client-to-detail-id" type="int" modifiable="true" property="id"/>
			
			<field name="id"/>
			<field name="name" label="Клиент"/>
			<add-labeled-fields/>
			
            <form name="month-balance" concept="upp-client-balance" is-set="true" page-size="10">
                
                <add-labeled-fields/>
                <order-by name="date" dir="desc"/>
                
            </form>
			
		</form>
		
		<form name="requests-to-commit" concept="upp-pay-request" is-set="true" page-size="15">
			
			<field name="id"/>
			
			<form name="client" concept="upp-client" constrain-parent="true">
				<field name="id"/>
				<field name="name" label="Клиент"/>
			</form>
			
			<!--form name="casher" concept="upp-casher" >
				<field name="id"/>
				<field name="name" label="Получатель"/>
			</form-->
			
			<field name="is-committed" editable="true"/>
			
			<add-labeled-fields/>
			
			<where name="is-committed">0</where>
			
			<order-by name="date" dir="desc"/>
			
		</form>
		
    </form> </view-schema>
	
	<workflow>
		
		<step name="request-list" label="Заявки на утверждение">
			<display>
				
				<grid form="requests-to-commit" hide-empty="true">
					
					<option reuse="detail-client"/>
					
				</grid>
				
			</display>
		</step>
		
		<step name="client-details" label="Детализация по клиенту">
			<when form="detailed-client" field="-"/>
			<display>
				
				<print form="detailed-client" field="*"/>
				
				<grid form="month-balance" label="Баланс">
					<group>
						<by field="date" form="month-balance">
							<print field="balance" form="month-balance"/>
						</by>
					</group>
					<columns>
						<column field="isumm"/>
						<column field="rsumm"/>
						<column field="i1"/>
						<column field="i2"/>
					</columns>
				</grid>
				
			</display>
		</step>
		
		<reusables>
			
			<option name="detail-client" label="...">
				<command name="client-to-detail-id" xpath-compute="xi:data[@name='client']/xi:datum[@name='id']" />
				<command name="upp-commitment">client-details</command>
			</option>
			
		</reusables>
		
	</workflow>
	
</view-definition>